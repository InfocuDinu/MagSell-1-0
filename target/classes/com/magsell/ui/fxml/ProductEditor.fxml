<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Produs" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    
    <HBox spacing="10">
        <Label text="Nume:" prefWidth="100"/>
        <TextField fx:id="nameField" promptText="Introduceti nume produs" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Descriere:" prefWidth="100"/>
        <TextArea fx:id="descriptionField" promptText="Introduceti descriere" prefRowCount="3" HBox.hgrow="ALWAYS" wrapText="true"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Pret:" prefWidth="100"/>
        <TextField fx:id="priceField" promptText="0.00" prefWidth="150"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Cantitate:" prefWidth="100"/>
        <TextField fx:id="quantityField" promptText="0" prefWidth="150"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Categoria:" prefWidth="100"/>
        <ComboBox fx:id="categoryField" promptText="Selectati categorie" HBox.hgrow="ALWAYS" editable="true"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Imagine:" prefWidth="100"/>
        <VBox HBox.hgrow="ALWAYS" spacing="5">
            <HBox spacing="10">
                <Button fx:id="selectImageButton" text="Selectează imagine" onAction="#handleSelectImage" style="-fx-padding: 8;"/>
                <Label fx:id="imagePathLabel" text="Nicio imagine selectată" style="-fx-text-fill: #6D4C41;"/>
            </HBox>
        </VBox>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Salveaza" onAction="#handleSaveProduct" style="-fx-padding: 8;"/>
        <Button text="Anuleaza" onAction="#handleCancelEdit" style="-fx-padding: 8;"/>
    </HBox>
</VBox>
