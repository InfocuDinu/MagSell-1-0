<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.fxml.FXMLLoader?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
             fx:controller="com.magsell.ui.controllers.MainWindowController">
    <top>
        <MenuBar>
            <Menu text="Fișier">
                <MenuItem text="Export PDF..." onAction="#handleExportPDF"/>
                <MenuItem text="Export Excel..." onAction="#handleExportExcel"/>
                <SeparatorMenuItem/>
                <MenuItem text="Ieșire" onAction="#handleExit"/>
            </Menu>
            <Menu text="Produse">
                <MenuItem text="Adăugare produs" onAction="#handleAddProduct"/>
                <MenuItem text="Vezi toate produsele" onAction="#handleViewProducts"/>
                <SeparatorMenuItem/>
                <MenuItem text="Gestionare categorii" onAction="#handleManageCategories"/>
            </Menu>
            <Menu text="Vânzări">
                <MenuItem text="Vezi vânzări" onAction="#handleViewSales"/>
            </Menu>
            <Menu text="Utilizatori">
                <MenuItem text="Gestionare utilizatori" onAction="#handleManageUsers"/>
                <MenuItem text="Permisiuni utilizatori" onAction="#handleUserPermissions"/>
            </Menu>
            <Menu text="Ajutor">
                <MenuItem text="Despre" onAction="#handleAbout"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Dashboard">
                <fx:include source="/com/magsell/ui/fxml/Dashboard.fxml"/>
            </Tab>
            <Tab text="POS - Vânzări">
                <fx:include source="/com/magsell/ui/fxml/POS.fxml"/>
            </Tab>
            <Tab text="Produse">
                <fx:include source="/com/magsell/ui/fxml/ProductList.fxml"/>
            </Tab>
            <Tab text="Vânzări">
                <fx:include source="/com/magsell/ui/fxml/SalesList.fxml"/>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
