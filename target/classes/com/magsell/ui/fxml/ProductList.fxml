<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.magsell.ui.controllers.ProductController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Produse" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <Separator HBox.hgrow="ALWAYS" orientation="HORIZONTAL"/>
                <Button text="+ Adaugă Produs" onAction="#handleAddProduct" style="-fx-padding: 8;"/>
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Cauta:"/>
                <TextField fx:id="searchField" promptText="Filtrare dupa nume..." HBox.hgrow="ALWAYS" onKeyReleased="#handleSearchProducts"/>
                <ComboBox fx:id="categoryCombo" promptText="Categorie..." onAction="#handleFilterByCategory"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="productTable" VBox.vgrow="ALWAYS"/>
    </center>

    <!-- În layout-ul pe tab-uri nu închidem fereastra din interiorul tab-ului -->
</BorderPane>
