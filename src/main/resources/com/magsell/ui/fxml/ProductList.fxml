<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsell.ui.controllers.ProductController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Produse" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <Separator HBox.hgrow="ALWAYS" orientation="HORIZONTAL"/>
                <Button text="+ AdaugÄƒ Produs" onAction="#handleAddProduct" style="-fx-padding: 8;"/>
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Cauta:"/>
                <TextField fx:id="searchField" promptText="Filtrare dupa nume..." HBox.hgrow="ALWAYS" onKeyReleased="#handleSearchProducts"/>
                <ComboBox fx:id="categoryCombo" promptText="Categorie..." onAction="#handleFilterByCategory"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="ID" prefWidth="50">
                    <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Nume" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Descriere" prefWidth="200">
                    <cellValueFactory><PropertyValueFactory property="description"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Pret" prefWidth="100">
                    <cellValueFactory><PropertyValueFactory property="price"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Cant." prefWidth="80">
                    <cellValueFactory><PropertyValueFactory property="quantity"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Categoria" prefWidth="100">
                    <cellValueFactory><PropertyValueFactory property="category"/></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button text="Inchide" onAction="#handleClose"/>
        </HBox>
    </bottom>
</BorderPane>
